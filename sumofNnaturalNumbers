#include<stdio.h>

//using the looping statements 
int loop(int num)
{
    int sum = 0;
    for(int i =0 ; i<=num ; i++)
    {
        sum = sum + i;
        
    }
    
    return sum;
}
int formula(int n)
{   
   int sum =  n*(n+1)/2;
   return sum ;
}
void main()
{
    int i=1 , num,sum;
    scanf("%d",&num);
    //loop
     sum = loop(num);
    //formula
    int sum1 = formula(num);
    
    printf("the sum is from loop: %d\n",sum);
    printf("the sum is from formula: %d ", sum1);
    
}
